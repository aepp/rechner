/* Range-Slider Tagesgeld Betrag*/
$(function() {
  $("#slider-price").slider({
    range: "min",
    value: 10000,
    min: 1000,
    max: 150000,
    slide: function( event, ui ) {
      $("#price").val(ui.value +  " Euro");
    }
  });
});

/* Range-Slider Zeit Tagesgeld*/
$(function() {
  $("#slider-time").slider({
    range: "min",
    value: 3,
    min: 1,
    max: 12,
    slide: function( event, ui ) {
      $("#time").val(ui.value +  " Monate");
    }
  });
});

